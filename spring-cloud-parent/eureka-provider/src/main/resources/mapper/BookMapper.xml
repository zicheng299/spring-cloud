<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.provider.mapper.BookMapper">



    <insert id="insert" parameterType="com.demo.provider.entity.Book" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO book (bid, title, author)
        VALUES (#{bid}, #{title}, #{author})
    </insert>

    <update id="update" parameterType="com.demo.provider.entity.Book">
        UPDATE book SET title = #{title}, author = #{author} WHERE bid = #{bid}
    </update>

    <delete id="delete">
        DELETE FROM user WHERE id = #{id}
    </delete>


    <select id="findAll" resultType="com.demo.provider.entity.Book">
        select * from book
    </select>
</mapper>